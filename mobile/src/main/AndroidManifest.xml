<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.railgun.spica"
    tools:ignore="ImpliedTouchscreenHardware">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="co.railgun.spica.SpicaApplication"
        android:allowBackup="true"
        android:banner="@mipmap/launcher_banner"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="co.railgun.spica.StartPaddingActivity"
            android:theme="@style/PaddingViewTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="bgm.rip"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="co.railgun.spica.page.link"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.railgun.spica.DetailActivity"
            android:theme="@style/AppTheme.NoStateBar" />
        <activity
            android:name="co.railgun.spica.HomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoStateBar" />
        <activity
            android:name="co.railgun.spica.FirstConfigActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="co.railgun.spica.PlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout"
            android:label="@string/title_activity_player"
            android:screenOrientation="sensorLandscape"
            android:supportsPictureInPicture="true"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="co.railgun.spica.MyCollectionActivity" />
        <activity android:name="co.railgun.spica.AllBangumiActivity" />
        <!-- <activity -->
        <!-- android:name=".SettingsActivity" -->
        <!-- android:label="@string/title_activity_settings" -->
        <!-- android:theme="@style/AppThemeActionBar" /> -->
        <activity android:name="co.railgun.spica.SearchActivity" />

        <service android:name="co.railgun.spica.service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="co.railgun.spica.service.AppIndexingUpdateService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name="co.railgun.spica.service.AppIndexingUpdateReceiver"
            android:exported="true"
            android:permission="com.google.android.gms.permission.APPINDEXING">
            <intent-filter>
                <action android:name="com.google.firebase.appindexing.UPDATE_INDEX" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="co.railgun.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>
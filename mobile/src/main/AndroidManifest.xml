<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.bangumi.Cygnus"
    tools:ignore="ImpliedTouchscreenHardware">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="co.bangumi.common.CygnusApplication"
        android:allowBackup="true"
        android:banner="@mipmap/launcher_banner"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="co.bangumi.Cygnus.StartPaddingActivity"
            android:theme="@style/PaddingViewTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.bangumi.Cygnus.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.bangumi.Cygnus.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.bangumi.Cygnus.FirstConfigActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="co.bangumi.Cygnus.PlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout"
            android:label="@string/title_activity_player"
            android:screenOrientation="sensorLandscape"
            android:supportsPictureInPicture="true"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="co.bangumi.Cygnus.FavoriteActivity" />
        <activity android:name="co.bangumi.Cygnus.AllBangumiActivity" />
        <!-- <activity -->
        <!-- android:name=".SettingsActivity" -->
        <!-- android:label="@string/title_activity_settings" -->
        <!-- android:theme="@style/AppThemeActionBar" /> -->
        <activity android:name="co.bangumi.Cygnus.SearchActivity"></activity>
    </application>

</manifest>